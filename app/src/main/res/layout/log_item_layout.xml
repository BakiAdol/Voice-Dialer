<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/log_item_id"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/final_order_ottom"
    >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:src="@mipmap/person_round_icon_round" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Contauct Name"
            android:id="@+id/log_name_contauct"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/call_type_id"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/person_round_icon_round"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:id="@+id/log_phone_contauct"/>
        </LinearLayout>


    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <ImageView
            android:id="@+id/log_callButon_id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorFragmentBack"
            android:src="@mipmap/call_icon"
            app:layout_constraintEnd_toStartOf="@+id/log_mesagebutton_id"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/log_mesagebutton_id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="28dp"
            android:background="@color/colorFragmentBack"
            android:src="@mipmap/message_icn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/call_dat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="datae"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/log_mesagebutton_id" />
    </android.support.constraint.ConstraintLayout>





</LinearLayout>